<% layout('/layouts/boilerplate') -%>

    <body>

        <%- include('../includes/navbar.ejs') %>

            <form class="create-liss-form" action="/listing" method="post">
                <div class="feild title-fld">
                    <label for="name">Title : </label>
                    <input type="text" id="nam" name="listing[title]" placeholder="Add a catchly title" required>
                </div>
                <div class="feild desc-fld">
                    <label for="email">Description :</label>
                    <textarea name="listing[description]" id="" cols="30" rows="3"></textarea>
                </div>
                <div class="feild image-fld">
                    <label for="name">Image Link : </label>
                    <input type="text" id="nam" name="listing[image]" placeholder="Enter image link/url">
                </div>
                <div class="wrapper-fld">
                    <div class="feild price-fld">
                        <label for="phone">Price :</label>
                        <input type="number" id="phone" name="listing[price]" required>
                    </div>
                    <div class="feild country-fld">
                        <label for="message">Country :</label>
                        <input type="text" id="message" name="listing[country]" rows="4" required>
                    </div>
                </div>
                <div class="feild location-fld">
                    <label for="message">Location :</label>
                    <input type="text" id="message" name="listing[location]" rows="4" required>
                </div>


                <input id="submit" type="submit" value="Submit">
            </form>

    </body>

    </html>