<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h3>All Listing</h3>
    <form method="get" action="/listing/new">
        <button>Create New Listing!</button>
    </form>
    <ul>
        <% listings.forEach(listing=> { %>
            <li><img src="<%= listing.image %>" alt=""></li>
            <li>
                <a href="/listing/<%= listing._id %>">
                    <%= listing.title %>
                </a>
            </li>
            <li>
                <a href="/listing/<%= listing._id %>">
                    <%= listing.description %>
                </a>
            </li>
            <li>
                <a href="/listing/<%= listing._id %>">
                    &#8377; <%= listing.price.toLocaleString("en-IN") %>
                </a>
            </li>
            <li>
                <a href="/listing/<%= listing._id %>">
                    <%= listing.location %>
                </a>
            </li>
            <li>
                <a href="/listing/<%= listing._id %>">
                    <%= listing.country %>
                </a>
            </li>
            <hr>
            <% }); %>
    </ul>
</body>

</html>